---
import Card from '../components/Card.astro'
import Link from '../components/Link.astro'
import Section from '../components/Section.astro'
---

<!DOCTYPE html>
<html lang='pt-BR' class='scroll-smooth'>
	<head>
		<meta charset='UTF-8' />
		<link rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png' />
		<link rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png' />
		<link rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png' />
		<link rel='manifest' href='/site.webmanifest' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<meta name='theme-color' content='#171717' />
		<meta name='description' content='DESIGNER GRÁFICO & EDITORA AUDIOVISUAL' />
		<title>BRPEREK</title>
		<style>
			@font-face {
				font-family: 'Roboto';
				font-style: normal;
				font-weight: 300;
				font-display: swap;
				src: url('/fonts/Roboto-300.woff2') format('woff2');
			}
			@font-face {
				font-family: 'Roboto';
				font-style: normal;
				font-weight: 500;
				font-display: swap;
				src: url('/fonts/Roboto-500.woff2') format('woff2');
			}
		</style>
	</head>
	<body class='bg-primary bg-body bg-cover font-light text-primary antialiased'>
		<header
			class='sticky top-0 flex h-14 items-center justify-between bg-primary px-4 py-2'
		>
			<div class='relative'>
				<img src='/images/menu.svg' class='relative z-10 h-8' alt='Menu' />
				<input
					type='checkbox'
					class='peer absolute top-0 z-10 h-8 w-8 opacity-0'
					aria-hidden='true'
				/>
				<div
					class='fixed top-0 left-0 flex h-full w-1/2 -translate-x-full transform-gpu flex-col space-y-4 bg-primary px-4 pt-20 text-lg transition-transform peer-checked:translate-x-0 peer-checked:transform-gpu'
				>
					<a href='/resume.pdf' download='cv.pdf'>Download CV</a>
					<a href='https://www.behance.net/brperek/' target='_blank'>Behance</a>
					<a href='#top'>Início</a>
					<a href='#work'>Trabalhos</a>
					<a href='#services'>Serviços</a>
					<a href='#socials'>Sociais</a>
				</div>
			</div>
			<img src='/images/icon.webp' class='h-full' alt='Ícone' />
		</header>
		<main>
			<section class='space-y-2 px-8'>
				<img
					src='/images/me.webp'
					class='w-full'
					fetchpriority='high'
					alt='Bruna Perek'
				/>
				<h1 class='text-3xl font-medium'>Olá, eu sou a Bruna</h1>
				<h2 class='text-lg font-medium tracking-widesest text-tertiary'>
					DESIGNER GRÁFICO &<br />EDITORA AUDIOVISUAL
				</h2>
				<Link
					label='e-mail'
					title='brperek@gmail.com'
					url='mailto:brperek@gmail.com'
				/>
				<p class='text-justify indent-12 text-secondary'>
					Formada em Técnico de Informática pelo Instituto Federal do Paraná,
					produzo artes visuais, webdesigner, designer gráfico e edição
					audiovisual como curtas, trailers, reels e vlogs.
				</p>
			</section>
			<Section title='TRABALHOS' anchor='work'>
				<div class='mt-3 flex snap-x snap-mandatory overflow-x-auto'>
					{
						Array.from({ length: 5 }).map((_, index) => (
							<img
								class='w-3/4 snap-center'
								src={`/images/gallery/${index}.webp`}
								loading='lazy'
								decoding='async'
								fetchpriority='low'
								alt={`Trabalho ${index}`}
							/>
						))
					}
				</div>
			</Section>
			<Section title='SERVIÇOS' anchor='services'>
				<div class='mt-8 space-y-4 px-8'>
					<Card
						title='Edição de Vídeos'
						subtitle='Sony Vegas/Premiere/CapCut'
					/>
					<Card
						title='WebDesigner'
						subtitle='Photoshop/Illustrador/Canva/Figma'
					/>
					<Card title='Edição de Fotos' subtitle='Lightroom/VSCO' />
				</div>
			</Section>
			<Section title='SOCIAIS' anchor='socials' class='mb-8'>
				<div class='mt-8 flex items-center justify-center pr-4'>
					<img src='/images/logo.webp' class='w-5/12' alt='Logo' />
					<div class='ml-2'>
						<Link
							label='INSTRAGRAM'
							title='@brperek'
							url='https://www.instagram.com/brperek/'
						/>
						<Link
							label='TWITTER'
							title='@brperek'
							url='https://twitter.com/brperek'
						/>
						<Link
							label='BEHANCE'
							title='@brperek'
							url='https://www.behance.net/brperek/'
						/>
						<Link
							label='LINKEDIN'
							title='Bruna Perek'
							url='https://www.linkedin.com/in/bruna-perek-4965b7163/'
						/>
					</div>
				</div>
			</Section>
		</main>
	</body>
</html>
