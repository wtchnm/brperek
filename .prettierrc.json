{
	"arrowParens": "avoid",
	"jsxSingleQuote": true,
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	],
	"plugins": [
		"./node_modules/prettier-plugin-astro",
		"./node_modules/prettier-plugin-tailwindcss"
	],
	"pluginSearchDirs": false,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "none",
	"useTabs": true
}
